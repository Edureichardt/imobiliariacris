generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Imovel {
  id         String   @id @default(uuid())
  operacao   String   // Ex: comprar, alugar
  descricao  String
  tipo       String
  cidade     String
  bairro     String
  endereco   String
  preco      Float
  criadoEm   DateTime @default(now())
  ativo      Boolean  @default(true)
  destaque   Boolean  @default(false)
  tourUrl    String?
  slug       String?  @unique           // ‚Üê AGORA OPCIONAL
  fotos      Foto[]
}

model Foto {
  id        String   @id @default(uuid())
  url       String
  imovelId  String
  imovel    Imovel   @relation(fields: [imovelId], references: [id])
}
